{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "types": ["vitest", "vitest/globals", "@testing-library/jest-dom", "jest"],  // Allows using `describe`, `it`, `expect`
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["src/assets/*"]
    }
  },
  "exclude": ["**/*.test.*", "**/__mocks__/*", "**/__tests__/*"]
}
